<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.ActionButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <ImageButton
        android:id="@+id/button_online_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_people_white_36dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/button_online_users"
        android:layout_alignRight="@id/button_online_users"
        android:layout_alignTop="@id/button_online_users"
        android:background="@drawable/bg_badge"
        android:text="@string/zero"
        android:textColor="@color/textColorPrimary" />
</RelativeLayout>